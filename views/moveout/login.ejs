<%- include("../partials/header-before-logging-in.ejs") %>

<h1><%= welcome %> <h1>
<div class="form-container">
  <form action="/login" method="POST" id="registerForm">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>
      <br><br>

      <label for="password">Password:</label>
      <input type="password" id="password" name="password" minlength="6" required>
      <br><br>

      <button class="btn" type="submit">Login</button>

      <p>Don't have an account? <a href="/register">Register</a></p>
    </form>
    <a href="/auth/login" class="google-login-button">Login with Google</a>
</div>

<% if (typeof errors !== 'undefined' && errors !== null && errors.length > 0) { %>
  <ul>
    <% errors.forEach(function(error) { %>
      <li style="color: red;"><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<%- include("../partials/footer.ejs") %>
